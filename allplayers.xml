<?xml version="1.0" encoding="utf-8"?>
<install version="2.5" type="plugin" group="authentication">
	<name>plg_authentication_allplayers</name>
	<author>Zach Curtis, Wayin, Inc</author>
	<creationDate>October 2012</creationDate>
	<copyright>Copyright (C) 2012 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>zc@wayin.com</authorEmail>
	<authorUrl>www.wayin.com</authorUrl>
	<version>1.0.0</version>
	<description>A Joomla Plugin for All-Players oAuth login authentication.</description>
	<files>
		<filename plugin="allplayers">allplayers.php</filename>
		<filename>index.html</filename>
		<folder>vendor</folder>
		<folder>assets</folder>
	</files>
	<languages folder="lang">
		<language tag="en-GB">en-GB.plg_authentication_allplayers.ini</language>
		<language tag="en-GB">en-GB.plg_authentication_allplayers.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field 
					name="consumer_key"
					type="text"
					size="50"
					label="PLG_ALLPLAYERS_FIELD_CONSUMERKEY_LABEL"
					description="PLG_ALLPLAYERS_FIELD_CONSUMERKEY_DESC"
					/>
				<field 
					name="consumer_secret"
					type="text"
					size="50"
					label="PLG_ALLPLAYERS_FIELD_CONSUMERSECRET_LABEL"
					description="PLG_ALLPLAYERS_FIELD_CONSUMERSECRET_DESC"
					/>
				<field 
					name="auth_domain"
					type="text"
					size="50"
					label="PLG_ALLPLAYERS_FIELD_AUTHDOMAIN_LABEL"
					description="PLG_ALLPLAYERS_FIELD_AUTHDOMAIN_DESC"
					default="https://www.allplayers.com"
					/>
				<field name="verifypeer" type="radio"
					default="1"
					description="PLG_ALLPLAYERS_FIELD_VERIFYPEER_DESC"
					label="PLG_ALLPLAYERS_FIELD_VERIFYPEER_LABEL">
					<option value="0">JNo</option>
					<option value="1">JYes</option>
				</field>
			</fieldset>
		</fields>
	</config>
</install>
